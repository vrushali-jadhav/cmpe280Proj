<form id="your_listings" method="POST">
    <% for (var i=0; i<posts.length; i++) { %>
        <table align="center" style="border-radius: 8px;">
            <tbody>
            <tr>
                <p id="listing" class ="tourapp">Listing <%=(i+1)%></p>
              <div class="container">
                  <img class="photo border" src="<%=posts[i].images%>" alt="houses" title="place available for rent">
                  <div class = "postdetails">
                      <p class="rent_l">Rent : $<%=posts[i].rent%></p>
                      <p class="room_type_l">Room: <%=posts[i].room_type%></p>
                      <p class="smoking_l">Smoking: <%=posts[i].smoking_allowed%></p>
                      <p class="gender_l">Gender: <%=posts[i].gender_preference%></p>
                      <p class="address_l">Address : <%=posts[i].address%></p>
                  </div>
                  <div class="like">
                    <input type="button" class="trigger_popup_fricc2" value="View Likes" onclick="checkLikes();">
                    <div class="hover_bkgr_fricc2">
                      <span class="helper"></span>
                      <div>
                        <div class="popupCloseButton2">X</div>
                        <div class="popup" id="view_like">
                        <label for="name2">User 2</label>
                        <i class="fa fa-thumbs-up" style="font-size: 20px;color: #20AA35;">
                        </i>
                        </div>
                      </div>
                    </div>
                  </div>
              </div>
             <div id="postid" style="visibility: hidden;"><%=posts[i].postid%></div>
            </tr>
          </tbody></table>
        <% } %>
